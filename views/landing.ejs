<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Campus Events</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        .navbar-toggler-icon::before {
            content: "\2630";
            font-size: 24px;
        }

        .navbar-toggler:not(.collapsed) .navbar-toggler-icon::before {
            content: "\2716";
        }

        .logo-img {
            height: 40px;
            margin-right: 10px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

        .footer-link {
            color: #6b0000;
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer-link:hover {
            color: #dc2626 !important;
        }

        .social-icon {
            color: #6b0000;
            transition: color 0.3s;
        }

        .social-icon:hover {
            color: #dc2626 !important;
        }

    .event-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        max-width: 320px;
        border-radius: 10px;
    }

    .event-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 20px rgba(220, 38, 38, 0.2);
        border-color: #dc2626 !important;
    }

    .event-card h3 {
        color: #dc2626;
    }

    .event-card .btn {
        background-color: #dc2626;
        border-color: #dc2626;
    }

    .event-card .btn:hover {
        background-color: #b91c1c;
        border-color: #b91c1c;
    }

    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.2rem;
        padding:1rem;
    }
    </style>
</head>

<body class="bg-white text-dark">

    <!-- Header -->
    <nav class="navbar navbar-expand-md bg-white shadow-sm sticky-top z-50" style="opacity: 0.95; z-index: 1030;">
        <div class="container">
            <a class="navbar-brand text-danger fw-bold fs-4" href="/landing">
                <img src="https://cdn.prod.website-files.com/60af144c343b5fdc5513a640/62201bb0b4baad0916cfc7bb_03c756_0a279644d7694f22996bd152f6f8b6be_mv2.png"
                    alt="Logo" class="logo-img" />
                Campus Events
            </a>

            <button class="navbar-toggler collapsed border-0" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center gap-3">
                  <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" href="/calendar">Calendar</a>
                  </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger text-white fw-semibold rounded-lg hover:rounded" href="/login">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container py-5">
        <section class="text-center mb-5">
            <h2 class="display-5 fw-bold text-danger mb-3">Welcome to Campus Events</h2>
            <p class="lead text-muted mb-4">Discover, attend, and organize events on campus</p>
            <a href="/login" class="btn btn-danger btn-lg">Sign In</a>
        </section>

        <!-- Ongoing Events -->
        <h1 class="text-2xl font-bold text-rose-600">Ongoing Events</h1>
        <section>
         
            <br>
            <div class="events-grid">
                <% if (ongoingEvents.length === 0) { %>
                    <p class="text-center text-gray-500 col-span-1">No ongoing events.</p>
                <% } %>
                <% ongoingEvents.forEach(event => { %>
                    <a href="/description/<%= event._id %>" class="text-decoration-none text-dark">
                        <div class="bg-white rounded-lg shadow-md p-4 event-card border border-red-200">
                            <% if (event.images && event.images.length > 0) { %>
                                <img src="<%= event.images[0] %>" alt="<%= event.title %>" style="width: 100%; height: 160px;" class="object-cover rounded mb-2" >
                            <% } %>
                            <h3 class="text-xl font-semibold text-red-700"><%= event.title %></h3>
                            <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                            <p class="text-gray-700">Venue: <%= event.venue %></p>
                            <button class="btn btn-danger mt-2">View Details</button>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>

        <br>

        <!-- Upcoming Events -->
        <section>
            <h1 class="text-2xl font-bold text-rose-600">Upcoming Events</h1>
            <br>
            <div class="events-grid">
                <% if (upcomingEvents.length === 0) { %>
                    <p class="text-center text-gray-500 col-span-3">No upcoming events.</p>
                <% } %>
                <% upcomingEvents.forEach(event => { %>
                    <a href="/description/<%= event._id %>" class="text-decoration-none text-dark">
                        <div class="bg-white rounded-lg shadow-md p-4 event-card border border-red-200">
                            <% if (event.images && event.images.length > 0) { %>
                                <img src="<%= event.images[0] %>" alt="<%= event.title %>" style="width: 100%; height: 160px;" class="object-cover rounded mb-2" >
                            <% } %>
                            <h3 class="text-xl font-semibold text-red-700"><%= event.title %></h3>
                            <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                            <p class="text-gray-700">Venue: <%= event.venue %></p>
                            <button class="btn btn-danger mt-2">Register</button>
                        </div>
                      </a>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script>
        document.getElementById("year").textContent = new Date().getFullYear();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
